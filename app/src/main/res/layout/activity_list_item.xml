<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayoutPage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="2"
    android:rowCount="2"
    tools:context="com.example.hliu.androidlabs.ListItemActivity">

    <RadioButton
        android:id="@+id/listItem_radioButton"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/radioButton"
        android:layout_columnWeight="1"
        android:gravity="fill"
        >


    </RadioButton>

    <CheckBox
        android:id="@+id/listItem_checkBox"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBox"

        android:layout_columnWeight="1"
        android:gravity="fill"
        >

    </CheckBox>

    <Switch
        android:id="@+id/listItem_switch"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switchbox"

        android:layout_columnWeight="1"
        android:gravity="fill"

        >

    </Switch>

    <ImageButton
        android:id="@+id/listItem_imagButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_columnWeight="1"
        android:gravity="fill"
        >

    </ImageButton>
</GridLayout>
