<?xml version="1.0" encoding="utf-8"?>
    <!--tools:context="com.example.hliu.androidlabs.ChatWindow"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_sentChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/button_sendChat" />

    <EditText
        android:id="@+id/chatMsg"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_sentChat"
        android:hint="type your message"
        android:inputType="textCapSentences" />

    <ListView
        android:id="@+id/listView_chatWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@id/button_sentChat"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />




</RelativeLayout>
